      }
    },
    {
      "@context": "http://www.w3.org/ns/anno.jsonld",
      "id": "meshes-of-the-afternoon-canvas-1-reflection-annotation-1.json",
      "type": "Annotation",
      "motivation": [
        "supplementing",
        "commenting"
      ],
      "body": {
        "type": "TextualBody",
        "value": "This is the first shot that shows the main character's face instead of her shadow. More notable, however, is the reflection in her eye. Although the reflection is warped and not entirely clear, the stark white reflection of light against the subject's darker iris is apparent. This reflection of the eye is foreshadowing the mysterious figure with a mirror for a face in the very next shot.",
        "format": "text/plain",
        "purpose": "commenting"
      },
      "target": {
        "source": {
          "id": "https://Cassidyschultz.github.io/meshes-reflections/meshes-of-the-afternoon/canvas-1/canvas",
          "type": "Canvas",
          "partOf": [
            {
              "id": "https://Cassidyschultz.github.io/meshes-reflections/meshes-of-the-afternoon/manifest.json",
              "type": "Manifest"
            }
