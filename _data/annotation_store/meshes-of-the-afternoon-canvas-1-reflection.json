        },
        "selector": {
          "type": "PointSelector",
          "t": "173.0"
        }
      }
    },
    {
      "@context": "http://www.w3.org/ns/anno.jsonld",
      "id": "meshes-of-the-afternoon-canvas-1-reflection-annotation-2.json",
      "type": "Annotation",
      "motivation": [
        "supplementing",
        "commenting"
      ],
      "body": {
        "type": "TextualBody",
        "value": "One of the most important instances of reflection in this film is the hooded mirror-figure established in this behind shot. Turning slowly to face the camera and reveal its face as a mirror, this figure's face almost entirely reflects pure white light, similar to the white glare in the protagonist's eye. ",
        "format": "text/plain",
        "purpose": "commenting"
      },
      "target": {
        "source": {
          "id": "https://Cassidyschultz.github.io/meshes-reflections/meshes-of-the-afternoon/canvas-1/canvas",
          "type": "Canvas",
